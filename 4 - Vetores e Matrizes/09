/* 9. Crie um programa que le 6 valores inteiros pares e, em seguida, mostre na tela os valores
lidos na ordem inversa. */
#include <stdio.h>
int main () {
    int vet[6];
    for (int i=0; i<6; i++){
        printf ("%i ) informe um número par : ", i+1);
        scanf ("%i", &vet[i]);
        if (vet[i]%2!=0){
            printf ("esse número é impar !");
            return 0;
        }
    }
    for (int i=5; i>=0; i--){
        printf ("%i ", vet[i]);
    }
}
