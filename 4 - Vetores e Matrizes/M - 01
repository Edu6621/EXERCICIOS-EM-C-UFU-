//1. Leia uma matriz 4 x 4, conte e escreva quantos valores maiores que 10 ela possui
#include <stdio.h>
int main () {
    int matriz[4][4];
    int cont=0;
    
    for (int i=0; i<4; i++){
        for (int j=0; j<4; j++){
            printf ("informe o valor [%i][%i]", i, j);
            scanf ("%i", &matriz[i][j]);
            if (matriz[i][j] > 10){
                cont++;
            }
        }
    }
    for (int i=0; i<4; i++){
        for (int j=0; j<4; j++){
            printf ("%4d", matriz[i][j]);
        }
        printf ("\n");
    }
    printf ("\n%i valores sÃ£o maiores de 10", cont);
    return 0;
}
