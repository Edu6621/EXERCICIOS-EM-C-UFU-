//7. Escreva um programa que leia 10 numeros inteiros e os armazene em um vetor. Imprima
//o vetor, o maior elemento e a posicao que ele se encontra.
#include <stdio.h>
int main () {
    int vet[10], maior, pos;
    for (int i=0; i<10; i++){
        printf ("%i ) informe um número : ", i);
        scanf ("%i", &vet[i]);
        if (i==0){
            maior=vet[i];
        }
        if (vet[i]>maior){
            maior=vet[i];
            pos=i;
        }
    }
    printf ("o maior número é %i e se encontra na posição %i", maior, pos);
}
