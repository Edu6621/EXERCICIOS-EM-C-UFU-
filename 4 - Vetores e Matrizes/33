/* 33. Faca um programa que leia um vetor de 15 posicÂ¸oes e o compacte, ou seja, elimine as
posicoes com valor zero. Para isso, todos os elementos a frente do valor zero, devem ser 
movidos uma posicao para tras no vetor */

#include <stdio.h>

int main () {
    int vet[15];
    
    for (int i=0; i<15; i++){
        printf ("Informe o valor de (%d) : ", i);
        scanf ("%d", &vet[i]);
    }
    printf ("\nVetor Inicial :\n");
    for (int i=0; i<15; i++){
        printf ("%d ", vet[i]);
    }
    
    int k=0;
    for (int i=0; i<15; i++){
        if (vet[i] != 0) {
            vet[k] = vet[i];
            k++;
        }
    }
    
    printf ("\nVetor Compacto :\n");
    for (int i=0; i<k; i++){
        printf ("%d ", vet[i]);
    }
    return 0;
}
