//Peça ao usuario para digitar três valores inteiros e imprima a soma deles
#include <stdio.h>
    int main () {
    int a, b, c, d;
    printf ("insira um valor :\n");
    scanf ("%i", &a);
    printf ("insira outro valor :\n");
    scanf ("%i", &b);
    printf ("insira outro valor :\n");
    scanf ("%i", &c);
    d=a+b+c;
    printf ("a soma dos numeros eh : %i", d);
    return 0;
    }
