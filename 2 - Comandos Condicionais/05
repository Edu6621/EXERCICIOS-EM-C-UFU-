/* Faca um programa que receba um numero inteiro e verifique se este numero e par ou
   ımpar */
#include <stdio.h>
    int main () {
        int a;
        printf ("insira um número : ");
        scanf ("%i", &a);
        a=a%2;
        if (a==0){
            printf ("esse número é par !!!");
            return 0;
        }else{
            printf ("esse número é ímpar");
        }
    }
