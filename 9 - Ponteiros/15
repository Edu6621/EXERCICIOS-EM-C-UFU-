// 15. Crie uma funcao que receba como parametro um array e o imprima. Nao utilize ındices
// para percorrer o array, apenas aritmetica de ponteiros. 
#include <stdio.h>
void Imprimir_Array (int vet[]){
    for (int i=0; i<5; i++){
        printf ("%i ", *(vet+i));
    }
}
int main () {
    int vet[5];
    for (int i=0; i<5; i++){
        printf ("%i ) informe um número : ", i+1);
        scanf ("%i", &*(vet+i));
    } 
    Imprimir_Array(vet);
}
