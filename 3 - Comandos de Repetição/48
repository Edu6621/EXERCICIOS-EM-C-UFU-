//48. Faca um programa que some os termos de valor par da sequencia de Fibonacci, cujos 
//valores nao ultrapassem quatro milhoes.  
#include <stdio.h>
int main () {
    int a=0, b=1, c=0, soma=0;
    while (c<=4000000){
        c = a+b;
        a = b;
        b = c;
        if (c%2 == 0 && c<=4000000){
            soma+=c;
        }
    }
    printf ("%i", soma);
    
}
