/*14. Fac¸a um programa que leia um vetor com os dados de 5 carros: marca (maximo 15 ´
letras), ano e prec¸o. Leia um valor p e mostre as informac¸oes de todos os carros com ˜
prec¸o menor que p. Repita este processo ate que seja lido um valor p = 0. */
#include <stdio.h>
#include <string.h>

typedef struct {
    char marca[15];
    int ano;
    float preco;
}Carro;

int main () {
    Carro carro[5];
    float p;

    for (int i=0; i<5; i++){
        printf ("%d\n", i+1);
        printf ("Informe a marca do carro : ");
        fgets(carro[i].marca, sizeof(carro[i].marca), stdin);
        carro[i].marca[strcspn(carro[i].marca, "\n")] = '\0';

        printf ("Informe o ano : ");
        scanf ("%d", &carro[i].ano);

        printf ("Informe o preço : ");
        scanf ("%f", &carro[i].preco);
        getchar();
    }
    printf ("Informe um valor P : ");
    scanf ("%f", &p);

    for (int i=0 ; i<5; i++){
        if (carro[i].preco < p){
            printf ("\nMarca : %s\n", carro[i].marca);
            printf ("Ano : %d\n", carro[i].ano);
            printf ("Preco : %.2f\n", carro[i].preco);
        }
    }
    return 0;
}
