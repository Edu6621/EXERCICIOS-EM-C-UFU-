/* 24. Escreva um programa que recebe do usuario uma string S, um caractere C, e uma ´
posic¸ao I e devolve o ındice da primeira posic¸ao da string onde foi encontrado o caractere ˜
C. A procura deve comecar a partir da posicao I. */

#include <stdio.h>
#include <string.h>

int buscaCaractere(char *S, char C, int I){
    for (int i=I; i<strlen(S); i++){
        if (S[i] == C){
            return i;
        }
    }
}

int main () {

    char S[50];
    char C;
    int I;

    printf ("Informe uma string : ");
    fgets (S, sizeof(S), stdin);
    S[strcspn(S, "\n")] = 0;

    printf ("Informe um caractere : ");
    scanf ("%c", &C);

    printf ("Informe uma posição : ");
    scanf ("%d", &I);

    printf ("encontrado o valor de %c na posição : %d", C, buscaCaractere(S, C, I));
    return 0;
}
