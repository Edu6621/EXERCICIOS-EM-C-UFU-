/* 14. Faca um programa que leia uma palavra (maximo de 50 letras) e some 1 no valor ASCII
de cada caractere da palavra. Imprima a string resultante. */
#include <stdio.h>
#include <string.h>
int main () {
    char string[50];
    char string2[50];
    int i=0;
    
    printf ("informe uma palavra : ");
    fgets (string, sizeof(string), stdin);
    while (string[i] != '\0'){
        string2[i] = string[i]+1;
        printf ("%c", string2[i]);
        i++;
    }    
}
