// 25. Escreva um programa que leia duas palavras e diga qual deles vem primeiro na ordem
// alfabetica. Dica: ‘a’ e menor do que ‘b’.

#include <stdio.h>
#include <string.h>

int main () {
    char a[50], b[50];
    int tamanho;

    printf ("Informe a primeira palavra : ");
    fgets (a, sizeof(a), stdin);
    a[strcspn(a, "\n")] = '\0';

    printf ("Informe a segunda palavra : ");
    fgets (b, sizeof(b), stdin);
    b[strcspn(b, "\n")] = '\0';

    if (strlen(a) > strlen(b)){
        tamanho = strlen(a) - 1;
    }else{
        tamanho = strlen(b) - 1;
    }

    for (int i=0; i<tamanho; i++){
        if (a[i] > b[i]){
            printf ("A palavra %s, vem primeiro na ordem alfabetica", b);
            return 0;
        }else if (b[i] > a[i]) {
            printf ("A palavra %s, vem primeiro na ordem alfabetica", a);
            return 0;
        }
    }
    printf ("as palavras são iguais");
    return 0;

}
