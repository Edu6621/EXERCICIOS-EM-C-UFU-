//10. Faca um programa que receba uma palavra e a imprima de tras-para-frente.
#include <stdio.h>
#include <string.h>
int main () {
    char palavra[50];
    int i;
    printf ("informe uma palavra : ");
    fgets (palavra, sizeof(palavra), stdin);
    i = strlen(palavra);
    while (i >= 0){
        printf ("%c", palavra[i]);
        i--;
    }
}
