//9. Escreva um programa que substitui as ocorrencias de um caractere ‘0’ em uma string por 
//outro caractere ‘1’.
#include <stdio.h>
#include <string.h>
int main () {
    char num[50];
    int i=0;
    
    printf ("informe uma string de números : ");
    fgets (num, sizeof(num), stdin);
    while (num[i] != '\0'){
        if (num[i] == '0'){
            num[i] = '1';
        }
        i++;
    }
    printf ("%s", num);
}
